<% layout("layouts/main") %>

<div
  class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-dark-bg transition-colors duration-300"
>
  <div
    class="bg-white/90 dark:bg-dark-surface/90 backdrop-blur-lg shadow-xl rounded-lg p-8 max-w-lg w-full border border-gray-200 dark:border-dark-border transition-colors duration-300"
  >
    <h1
      class="text-4xl font-bold text-blue-600 dark:text-primary-400 text-center mb-6 transition-colors duration-300"
    >
      Add Club
    </h1>

    <form action="/club/add" method="post" class="space-y-5">
      <div>
        <label
          for="name"
          class="block text-lg font-semibold text-gray-700 dark:text-dark-text-primary transition-colors duration-300"
          >Club Name</label
        >
        <input
          type="text"
          name="name"
          id="name"
          class="w-full border border-gray-300 dark:border-dark-border bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-primary-500 transition-colors duration-300"
          placeholder="Enter club name"
          required
        />
      </div>

      <div>
        <label
          for="description"
          class="block text-lg font-semibold text-gray-700 dark:text-dark-text-primary transition-colors duration-300"
          >Description</label
        >
        <textarea
          name="description"
          id="description"
          class="w-full border border-gray-300 dark:border-dark-border bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-primary-500 transition-colors duration-300 resize-none h-24"
          placeholder="Write a brief description..."
          required
        ></textarea>
      </div>

      <div>
        <label
          for="image"
          class="block text-lg font-semibold text-gray-700 dark:text-dark-text-primary transition-colors duration-300"
          >Club Image URL</label
        >
        <input
          type="text"
          name="image"
          id="image"
          class="w-full border border-gray-300 dark:border-dark-border bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-primary-500 transition-colors duration-300"
          placeholder="Paste image URL"
          required
        />
      </div>

      <!-- <div>
        <label for="oc" class="block text-lg font-semibold text-gray-700"
          >Overall Coordinator</label
        >
        <input
          type="text"
          name="oc"
          id="oc"
          class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
          placeholder="Enter coordinator's name"
          required
        />
      </div> -->
      <div class="text-center">
        <button
          type="submit"
          class="w-full bg-blue-500 dark:bg-primary-500 hover:bg-blue-700 dark:hover:bg-primary-600 text-white py-3 px-4 rounded-lg text-lg font-semibold transition-colors duration-300 transform hover:scale-105"
        >
          Add Club
        </button>
      </div>
    </form>
  </div>
</div>
