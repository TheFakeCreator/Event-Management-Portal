<% layout('layouts/main') %>

<div class="container mx-auto p-4 sm:p-6 lg:p-10">
  <h1
    class="text-2xl sm:text-3xl lg:text-4xl font-bold text-center text-red-600 mb-6 sm:mb-8"
  >
    Manage Events
  </h1>

  <!-- Events List -->
  <div class="bg-white shadow-lg rounded-lg p-4 sm:p-6">
    <h2 class="text-xl sm:text-2xl font-semibold text-gray-800 mb-4">
      All Events
    </h2>

    <div class="overflow-x-auto">
      <table
        class="w-full border-collapse border border-gray-300 text-sm sm:text-base"
      >
        <thead>
          <tr class="bg-gray-100">
            <th class="border p-2 sm:p-3">Event Name</th>
            <th class="border p-2 sm:p-3">Type</th>
            <th class="border p-2 sm:p-3">Start Date</th>
            <th class="border p-2 sm:p-3">End Date</th>
            <th class="border p-2 sm:p-3">Time</th>
            <th class="border p-2 sm:p-3">Location</th>
            <th class="border p-2 sm:p-3">Registered</th>
            <th class="border p-2 sm:p-3">Created By</th>
            <th class="border p-2 sm:p-3">Image</th>
            <th class="border p-2 sm:p-3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event => { %>
          <tr>
            <td class="border p-2 sm:p-3"><%= event.title %></td>
            <td class="border p-2 sm:p-3"><%= event.Type %></td>
            <td class="border p-2 sm:p-3">
              <%= new Date(event.startDate).toLocaleDateString() %>
            </td>
            <td class="border p-2 sm:p-3">
              <%= new Date(event.endDate).toLocaleDateString() %>
            </td>
            <td class="border p-2 sm:p-3">
              <%= event.startTime %> - <%= event.endTime %>
            </td>
            <td class="border p-2 sm:p-3"><%= event.location %></td>
            <td class="border p-2 sm:p-3 text-center">
              <%= event.registeredUsers %>
            </td>
            <td class="border p-2 sm:p-3">
              <%= event.createdBy ? event.createdBy.name : "Unknown" %>
            </td>
            <td class="border p-2 sm:p-3 text-center">
              <img
                src="<%= event.image %>"
                alt="Event Image"
                class="w-16 h-16 object-cover rounded-lg"
              />
            </td>
            <td
              class="border p-2 sm:p-3 flex justify-center space-x-2 sm:space-x-3"
            >
              <a
                href="/admin/events/edit/<%= event._id %>"
                class="text-blue-500 hover:underline"
              >
                Edit
              </a>
              <form
                action="/admin/events/delete/<%= event._id %>"
                method="POST"
              >
                <button type="submit" class="text-red-500 hover:underline">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
