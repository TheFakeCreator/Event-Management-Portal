<% layout('layouts/main') %>

<div class="container mx-auto p-10">
  <h1 class="text-4xl font-bold text-center text-red-600 mb-8">
    Admin Settings
  </h1>

  <!-- Site Information -->
  <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Site Information</h2>
    <form action="/admin/settings/updateSite" method="POST">
      <div class="mb-4">
        <label class="block text-gray-700">Site Name</label>
        <input
          type="text"
          name="siteName"
          value="<%= settings.siteName %>"
          class="w-full p-2 border rounded-lg"
          required
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Site Description</label>
        <textarea
          name="siteDescription"
          class="w-full p-2 border rounded-lg"
          required
        >
          <%= settings.siteDescription %>
        </textarea>
      </div>
      <button
        type="submit"
        class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700"
      >
        Save Changes
      </button>
    </form>
  </div>

  <!-- Feature Toggles -->
  <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Feature Toggles</h2>
    <form action="/admin/settings/updateFeatures" method="POST">
      <div class="mb-4 flex items-center">
        <input type="checkbox" name="userRegistration" <%=
        settings.userRegistration ? "checked" : "" %> class="w-5 h-5">
        <label class="ml-2 text-gray-700">Enable User Registration</label>
      </div>
      <div class="mb-4 flex items-center">
        <input type="checkbox" name="maintenanceMode" <%=
        settings.maintenanceMode ? "checked" : "" %> class="w-5 h-5">
        <label class="ml-2 text-gray-700">Enable Maintenance Mode</label>
      </div>
      <button
        type="submit"
        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700"
      >
        Save Settings
      </button>
    </form>
  </div>

  <!-- Contact Information -->
  <div class="bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">
      Contact Information
    </h2>
    <form action="/admin/settings/updateContact" method="POST">
      <div class="mb-4">
        <label class="block text-gray-700">Support Email</label>
        <input
          type="email"
          name="supportEmail"
          value="<%= settings.supportEmail %>"
          class="w-full p-2 border rounded-lg"
          required
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Support Phone</label>
        <input
          type="text"
          name="supportPhone"
          value="<%= settings.supportPhone %>"
          class="w-full p-2 border rounded-lg"
          required
        />
      </div>
      <button
        type="submit"
        class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-700"
      >
        Save Contact Info
      </button>
    </form>
  </div>
</div>
