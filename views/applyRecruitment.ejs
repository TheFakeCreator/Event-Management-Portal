<% layout('layouts/main') %>

<div class="max-w-xl mx-auto bg-white shadow-md rounded-lg p-8 mt-10">
  <h1 class="text-2xl font-bold text-blue-600 mb-6 text-center">Apply for <%= recruitment.title %></h1>
  <% if (typeof success !== 'undefined') { %>
    <div class="mb-4 p-3 bg-green-100 text-green-700 rounded"><%= success %></div>
  <% } %>
  <% if (typeof error !== 'undefined') { %>
    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded"><%= error %></div>
  <% } %>
  <div class="mb-4 text-gray-700 text-center">
    <p><span class="font-semibold">Club:</span> <%= recruitment.club?.name || 'Club' %></p>
    <p><span class="font-semibold">Description:</span> <%= recruitment.description %></p>
    <p><span class="font-semibold">Deadline:</span> <%= new Date(recruitment.deadline).toLocaleDateString() %></p>
    <% if (typeof totalApplicants !== 'undefined') { %>
      <p class="text-green-700 font-semibold">Total Applicants: <%= totalApplicants %></p>
    <% } %>
  </div>
  <form action="/recruitment/apply/<%= recruitment._id %>" method="POST" class="space-y-6">
    <div>
      <label for="name" class="block text-gray-700 font-semibold mb-2">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        value="<%= user?.name || '' %>"
      />
    </div>
    <div>
      <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        value="<%= user?.email || '' %>"
      />
    </div>
    <div class="flex justify-end">
      <button
        type="submit"
        class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition"
      >
        Submit Application
      </button>
    </div>
  </form>
  <a href="/recruitment" class="block mt-6 text-blue-600 hover:underline text-center">&larr; Back to Recruitments</a>
</div>
