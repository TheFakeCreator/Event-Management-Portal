<% layout("layouts/main") %>

<div class="container mx-auto p-6">
  <div class="flex items-center gap-6 mb-8">
    <img
      src="<%= club.image %>"
      alt="<%= club.name %> Logo"
      class="w-32 h-32 object-cover rounded-lg shadow-md border border-gray-200"
    />
    <div>
      <h1 class="text-3xl font-bold text-blue-700 mb-2"><%= club.name %></h1>
      <p class="text-gray-600 text-lg mb-4"><%= club.description %></p>
    </div>
  </div>

  <!-- Tab Navigation -->
  <div class="mb-6 border-b border-gray-200">
    <ul
      id="clubTabs"
      class="flex flex-wrap -mb-px text-sm font-medium text-center"
    >
      <li class="mr-2">
        <button
          class="tab-btn inline-block p-4 border-b-2 rounded-t-lg"
          data-tab="about"
        >
          About
        </button>
      </li>
      <li class="mr-2">
        <button
          class="tab-btn inline-block p-4 border-b-2 rounded-t-lg"
          data-tab="recruitments"
        >
          Recruitments
        </button>
      </li>
      <li class="mr-2">
        <button
          class="tab-btn inline-block p-4 border-b-2 rounded-t-lg"
          data-tab="gallery"
        >
          Gallery
        </button>
      </li>
      <li class="mr-2">
        <button
          class="tab-btn inline-block p-4 border-b-2 rounded-t-lg"
          data-tab="socials"
        >
          Socials
        </button>
      </li>
      <li class="mr-2">
        <button
          class="tab-btn inline-block p-4 border-b-2 rounded-t-lg"
          data-tab="events"
        >
          Events
        </button>
      </li>
      <li class="mr-2">
        <button
          class="tab-btn inline-block p-4 border-b-2 rounded-t-lg"
          data-tab="members"
        >
          Members
        </button>
      </li>
    </ul>
  </div>

  <!-- Tab Content -->
  <div id="tabContent">
    <div class="tab-pane" id="about">
      <h2 class="text-xl font-semibold mb-2">About</h2>
      <p><%= club.description %></p>
    </div>
    <div class="tab-pane hidden" id="recruitments">
      <h2 class="text-xl font-semibold mb-2">Recruitments</h2>
      <p>Recruitment information will go here.</p>
    </div>
    <div class="tab-pane hidden" id="gallery">
      <h2 class="text-xl font-semibold mb-2">Gallery</h2>
      <p>Gallery images will go here.</p>
    </div>
    <div class="tab-pane hidden" id="socials">
      <h2 class="text-xl font-semibold mb-2">Socials</h2>
      <p>Social media links will go here.</p>
    </div>
    <div class="tab-pane hidden" id="events">
      <h2 class="text-xl font-semibold mb-2">Events</h2>
      <p>Club events will go here.</p>
    </div>
    <div class="tab-pane hidden" id="members">
      <h2 class="text-xl font-semibold mb-2">Members</h2>
      <p>Club members will be listed here.</p>
    </div>
  </div>

  <a href="/club" class="inline-block mt-4 text-blue-600 hover:underline"
    >&larr; Back to Clubs</a
  >
</div>

<script>
  // Simple tab switching logic
  document.addEventListener("DOMContentLoaded", function () {
    const tabBtns = document.querySelectorAll(".tab-btn");
    const tabPanes = document.querySelectorAll(".tab-pane");
    function activateTab(tab) {
      tabPanes.forEach((pane) => {
        pane.classList.toggle("hidden", pane.id !== tab);
      });
      tabBtns.forEach((btn) => {
        btn.classList.toggle("border-blue-600", btn.dataset.tab === tab);
        btn.classList.toggle("text-blue-600", btn.dataset.tab === tab);
        btn.classList.toggle("border-transparent", btn.dataset.tab !== tab);
        btn.classList.toggle("text-gray-500", btn.dataset.tab !== tab);
      });
    }
    tabBtns.forEach((btn) => {
      btn.addEventListener("click", () => activateTab(btn.dataset.tab));
    });
    // Activate first tab by default
    activateTab("about");
  });
</script>
