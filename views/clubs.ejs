<% layout("layouts/main") %>
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Club Listings</h1>
    <div class="grid grid-cols-3 gap-6">
        <% clubs.forEach(club => { %>
            <div class="bg-white shadow-md rounded-lg p-4">
                <img src="<%= club.logo %>" alt="<%= club.name %> Logo" class="w-full h-40 object-cover rounded-md">
                <h2 class="text-xl font-semibold mt-2"><%= club.name %></h2>
                <p class="text-gray-600"><%= club.description %></p>
                <p class="text-sm text-gray-500 mt-1">Contact: <%= club.contactEmail %></p>
            </div>
        <% }) %>
    </div>
</div>
