<% layout("layouts/main") %>

<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold text-center mb-6 text-blue-600">
    Club Listings
  </h1>

  <!-- Responsive Grid Layout -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% clubs.forEach(club => { %>
    <div
      class="bg-white shadow-lg rounded-lg p-4 transition transform hover:scale-[102%] hover:shadow-xl"
    >
      <!-- Club Image -->
      <img
        src="<%= club.image %>"
        alt="<%= club.name %> Logo"
        class="w-full h-40 object-cover rounded-md"
      />

      <!-- Club Details -->
      <h2 class="text-xl font-semibold mt-3 text-gray-800"><%= club.name %></h2>
      <p class="text-gray-600 mt-1"><%= club.description %></p>
    </div>
    <% }) %>
  </div>
</div>
