<% layout("layouts/main") %>

<div class="container mx-auto p-6">
  <div class="flex items-center justify-between mb-8">
    <h1
      class="text-3xl font-bold text-blue-600 dark:text-primary-400 transition-colors duration-300"
    >
      Club Listings
    </h1>
    <% if (user && user.role === 'admin') { %>
    <a
      href="/club/add"
      class="inline-flex items-center gap-2 bg-blue-600 dark:bg-primary-500 hover:bg-blue-700 dark:hover:bg-primary-600 text-white font-semibold py-2 px-5 rounded-lg shadow-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300 dark:focus:ring-primary-400"
      title="Add Club"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 4v16m8-8H4"
        />
      </svg>
      Add Club
    </a>
    <% } %>
  </div>

  <!-- Responsive Grid Layout -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% clubs.forEach(club => { %>
    <a href="/club/<%= club._id %>/about" class="block group">
      <div
        class="bg-white dark:bg-dark-surface shadow-xl rounded-2xl p-5 transition-all duration-300 hover:scale-105 hover:shadow-2xl cursor-pointer border border-gray-100 dark:border-dark-border group-hover:border-blue-400 dark:group-hover:border-primary-400 relative overflow-hidden"
      >
        <!-- Club Banner with Logo -->
        <div
          class="w-full h-44 rounded-lg overflow-hidden mb-4 bg-gray-100 dark:bg-dark-card relative transition-colors duration-300"
        >
          <!-- Banner Image -->
          <img
            src="<%= club.banner %>"
            alt="<%= club.name %> Banner"
            class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            style="background: #f3f4f6"
          />
          <!-- Club Logo -->
          <div
            class="absolute bottom-3 left-3 w-20 h-20 bg-white dark:bg-dark-surface rounded-lg shadow-lg overflow-hidden border-2 border-white dark:border-dark-border transition-colors duration-300"
          >
            <img
              src="<%= club.image %>"
              alt="<%= club.name %> Logo"
              class="object-contain w-full h-full"
            />
          </div>
        </div>
        <!-- Club Details -->
        <h2
          class="text-xl font-bold mt-1 text-gray-800 dark:text-dark-text-primary group-hover:text-blue-600 dark:group-hover:text-primary-400 transition-colors duration-300"
        >
          <%= club.name %>
        </h2>
        <p
          class="text-gray-600 dark:text-dark-text-secondary mt-2 text-sm transition-colors duration-300"
        >
          <%= club.description %>
        </p>
      </div>
    </a>
    <% }) %>
  </div>
</div>
