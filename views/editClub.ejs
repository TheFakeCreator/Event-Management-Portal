<% layout("layouts/main") %>

<div class="container mx-auto max-w-2xl py-8">
  <h1 class="text-2xl font-bold mb-6">Edit Club Details</h1>
  <form action="/club/<%= club._id %>/edit" method="POST">
    <div class="mb-4">
      <label class="block mb-1 font-semibold">Name</label>
      <input type="text" name="name" value="<%= club.name %>" class="w-full border rounded px-3 py-2" required />
    </div>
    <div class="mb-4">
      <label class="block mb-1 font-semibold">Description</label>
      <textarea name="description" class="w-full border rounded px-3 py-2" rows="3" required><%= club.description %></textarea>
    </div>
    <div class="mb-4">
      <label class="block mb-1 font-semibold">About</label>
      <textarea name="about" class="w-full border rounded px-3 py-2" rows="5"><%= club.about %></textarea>
    </div>
    <div class="mb-4">
      <label class="block mb-1 font-semibold">Image URL</label>
      <input type="text" name="image" value="<%= club.image %>" class="w-full border rounded px-3 py-2" required />
    </div>
    <div class="mb-4">
      <label class="block mb-1 font-semibold">Banner URL</label>
      <input type="text" name="banner" value="<%= club.banner %>" class="w-full border rounded px-3 py-2" />
    </div>
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded">Save Changes</button>
    <a href="/club/<%= club._id %>/about" class="ml-4 text-blue-600 hover:underline">Cancel</a>
  </form>
</div>
