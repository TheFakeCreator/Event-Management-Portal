<% layout("layouts/main") %>

<div
  class="container mx-auto px-4 py-8 dark:bg-dark-bg transition-colors duration-300"
>
  <h1
    class="text-3xl font-extrabold text-blue-600 dark:text-primary-400 mb-6 text-center transition-colors duration-300"
  >
    Register for <%= event.title %>
  </h1>

  <div
    class="bg-white dark:bg-dark-surface shadow-lg rounded-xl p-6 max-w-lg mx-auto border border-gray-200 dark:border-dark-border transition-colors duration-300"
  >
    <p
      class="text-gray-700 dark:text-dark-text-primary mb-4 transition-colors duration-300"
    >
      <strong>Date:</strong> <%= new
      Date(event.startDate).toLocaleDateString('en-US') %>
    </p>
    <p
      class="text-gray-700 dark:text-dark-text-primary mb-4 transition-colors duration-300"
    >
      <strong>Time:</strong> <%= event.startTime %> - <%= event.endTime %>
    </p>
    <p
      class="text-gray-700 dark:text-dark-text-primary mb-4 transition-colors duration-300"
    >
      <strong>Location:</strong> <%= event.location %>
    </p>
    <form
      action="/event/<%= event._id %>/register"
      method="POST"
      class="space-y-4"
    >
      <!-- CSRF Token -->
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <div>
        <label
          for="name"
          class="block text-lg font-semibold text-gray-700 dark:text-dark-text-primary transition-colors duration-300"
          >Name</label
        >
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Enter your full name (e.g., John Doe)"
          required
          class="w-full p-2 border border-gray-300 dark:border-dark-border bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-primary-500 transition-colors duration-300"
        />
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          Your name as it should appear on the participant list
        </p>
      </div>
      <div>
        <label
          for="email"
          class="block text-lg font-semibold text-gray-700 dark:text-dark-text-primary transition-colors duration-300"
          >Email</label
        >
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter your email address (e.g., user@example.com)"
          required
          class="w-full p-2 border border-gray-300 dark:border-dark-border bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-primary-500 transition-colors duration-300"
        />
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          We'll send event updates and confirmations to this email
        </p>
      </div>
      <div>
        <label
          for="phone"
          class="block text-lg font-semibold text-gray-700 dark:text-dark-text-primary transition-colors duration-300"
          >Phone</label
        >
        <input
          type="text"
          name="phone"
          id="phone"
          placeholder="Enter your phone number (e.g., +1234567890)"
          required
          class="w-full p-2 border border-gray-300 dark:border-dark-border bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-primary-500 transition-colors duration-300"
        />
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          For urgent event-related communications
        </p>
      </div>

      <button
        type="submit"
        class="w-full bg-blue-500 dark:bg-primary-500 text-white py-2 rounded-lg hover:bg-blue-600 dark:hover:bg-primary-600 transition-colors duration-300"
      >
        Register Now
      </button>
    </form>
  </div>
</div>
