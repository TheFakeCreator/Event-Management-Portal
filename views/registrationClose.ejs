<% layout("layouts/main") %>

<div class="container mx-auto px-4 py-8 text-center">
  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-xl p-8">
    <h1 class="text-3xl font-bold text-red-600 mb-4">Registration Closed</h1>
    <p class="text-gray-700 text-lg mb-6">
      Sorry, the registration for <strong><%= event.title %></strong> is now closed.
      The event has already started.
    </p>
    
    <div class="flex justify-center mt-6">
      <a href="/event" class="bg-blue-500 text-white px-5 py-2 rounded-lg hover:bg-blue-600 transition">
        View Other Events
      </a>
    </div>
  </div>
</div>
