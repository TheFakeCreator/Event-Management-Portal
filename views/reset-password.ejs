<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Reset Password</title>
    <script src="/javascript/theme-toggle.js"></script>
  </head>
  <body class="transition-colors duration-300">
    <script src="/javascript/password-validator.js"></script>
    <!-- Theme Toggle Button -->
    <div class="fixed top-4 right-4 z-50">
      <button
        id="theme-toggle-desktop"
        class="p-2 rounded-lg bg-white dark:bg-dark-surface border border-gray-300 dark:border-dark-border shadow-lg hover:shadow-xl transition-all duration-300"
      >
        <svg
          id="theme-toggle-sun-icon"
          class="w-5 h-5 text-yellow-500 block dark:hidden"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            clip-rule="evenodd"
          ></path>
        </svg>
        <svg
          id="theme-toggle-moon-icon"
          class="w-5 h-5 text-gray-400 hidden dark:block"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
          ></path>
        </svg>
      </button>
    </div>

    <main
      class="w-screen h-screen flex items-center justify-center bg-gray-100 dark:bg-dark-bg transition-colors duration-300"
    >
      <form action="/auth/reset-password/<%= token %>" method="post">
        <div
          class="bg-white dark:bg-dark-surface p-8 rounded-lg shadow-lg dark:shadow-2xl border dark:border-dark-border w-96 transition-colors duration-300"
        >
          <h1 class="text-3xl font-bold text-blue-500 dark:text-blue-400">
            Reset Password
          </h1>
          <div class="mt-4">
            <label
              for="newPassword"
              class="block text-gray-600 dark:text-dark-text-primary"
              >New Password</label
            >
            <input
              type="password"
              name="newPassword"
              id="password"
              class="w-full mt-1 p-2 border border-gray-300 dark:border-dark-border rounded-lg bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary transition-colors duration-300"
              autocomplete="new-password"
            />

            <!-- Password Strength Meter -->
            <div class="mt-2">
              <div class="flex justify-between items-center mb-1">
                <span
                  class="text-xs text-gray-500 dark:text-dark-text-secondary"
                  >Strength:</span
                >
                <span
                  id="strength-label"
                  class="text-xs font-medium text-gray-500"
                ></span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1">
                <div
                  id="password-strength"
                  class="h-1 rounded-full bg-gray-300 transition-all duration-300"
                  style="width: 0%"
                ></div>
              </div>
            </div>

            <!-- Password Requirements -->
            <div class="mt-2">
              <div class="grid grid-cols-2 gap-x-2 gap-y-1 text-xs">
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>8+ chars
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>Uppercase
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>Lowercase
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>Number
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>Special
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>Not common
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>No sequence
                </div>
                <div class="flex items-center text-gray-500">
                  <span class="mr-1 text-xs">○</span>No repeat
                </div>
              </div>
            </div>
          </div>
          <div class="mt-4">
            <label
              for="confirmPassword"
              class="block text-gray-600 dark:text-dark-text-primary"
              >Confirm Password</label
            >
            <input
              type="password"
              name="confirmPassword"
              id="confirm-password"
              class="w-full mt-1 p-2 border border-gray-300 dark:border-dark-border rounded-lg bg-white dark:bg-dark-card text-gray-900 dark:text-dark-text-primary transition-colors duration-300"
            />
          </div>
          <div class="mt-6">
            <button
              type="submit"
              class="w-full bg-blue-500 dark:bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-600 dark:hover:bg-blue-700 transition duration-300"
            >
              Reset password
            </button>
          </div>
          <div class="mt-6 text-center">
            <a
              href="/auth/login"
              class="text-blue-500 dark:text-blue-400 hover:underline"
              >Back to Login</a
            >
          </div>
        </div>
      </form>
    </main>
  </body>
</html>
